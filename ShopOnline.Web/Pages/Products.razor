@page "/"
@using ShopOnline.Models.Dtos
@inherits ProductsBase

@if (Products == null)
{
    <div class="spinner-border text-primary justify-content-center d-flex align-items-center flex-column" role="status">
      <span class="visually-hidden">Loading products...</span>
    </div>
}
else
{
    <h3 class="mb-5">Products</h3>
    var productCount = Products.Count();
    if (productCount > 0)
    {
            @foreach (var prodGroup in GetGroupedProductsByCategory())
            {
                <h4>@GetCategoryName(prodGroup)</h4>
                <div class="row mt-3">
                    <DisplayProducts Products=@prodGroup></DisplayProducts>
                </div>
                <hr class="mb-3" />
            }
    }
}